<h1>ジャンル一覧</h1>

<% if @categories.count > 0 %>
<ul data-role="listview" data-inset="true" data-theme="e" >
  <% @categories.each do |category| %>
  <li><%= link_to category.name, category %></li>
  <% end %>
</ul>
<% end %>

